{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "src/**/*",                 // Include all files in the src/ directory
    "tests/**/*"                // Include all files in the tests/ directory
  ],
  "exclude": [
    "node_modules",             // Exclude dependencies
    "dist"                      // Exclude the output folder
  ]
}
